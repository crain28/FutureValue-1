@model FutureValueModel
@{ 
    ViewBag.Title = "Future Value Calculator";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Future Value Calculator</title>
    <style>

    </style>
</head>
<body>
    <div class="row">
        <h1 class="col-md-12">Future Value Calculator</h1>
        <form asp-action="Index" method="post" class="col-md-6">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="MonthlyInvestment" class="form-label">Monthly Investment:</label>
                <input asp-for="MonthlyInvestment" class="form-control" />
            </div>
            <div>
                <label asp-for="YearlyInterestRate" class="form-label">Yearly Interest Rate:</label>
                <input asp-for="YearlyInterestRate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Years" class="form-label">Number of Years:</label>
                <input asp-for="Years" class="form-control" />
            </div>
            <div class="form-group">
                <label>Future Value:</label>
                <label class="form-control col-sm-3">@ViewBag.FV.ToString("c2")</label>
            </div>
            <div class="row">
                <div class="col offset-sm-3 pl-0">
                    <button type="submit" class="btn btn-primary">
                        Calculate
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
        <br/>
        <img src="~/Images/money.jpg" alt="money growing" style="border-radius:20px; width:50%;" class="rounded" />
    </div>
    </body>
</html>